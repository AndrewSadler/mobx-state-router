{
  "name": "mobx-state-router",
  "description": "MobX powered router for React apps",
  "version": "0.0.0-development",
  "author": "Naresh Bhatia",
  "license": "MIT",
  "homepage": "https://github.com/nareshbhatia/mobx-state-router",
  "repository": {
    "type": "git",
    "url": "https://github.com/nareshbhatia/mobx-state-router.git"
  },
  "keywords": [
    "mobx",
    "react",
    "router"
  ],
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "activate-commit-hook": "validate-commit-msg",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts*' 'test/**/*.ts*'",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "format": "prettier --print-width 80 --tab-width 4 --single-quote --write '{src,test}/**/*.ts*'",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "path-to-regexp": "^2.2.1",
    "query-string": "^6.1.0"
  },
  "peerDependencies": {
    "history": "^4.x",
    "react": "16.x",
    "mobx": "^4.x",
    "mobx-react": "^5.x",
    "value-equal": "^0.4.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/history": "^4.6.2",
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.3.2",
    "@types/query-string": "^5.1.0",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "colors": "^1.3.0",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "history": "^4.7.2",
    "husky": "^0.14.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "mobx": "4.1.1",
    "mobx-react": "5.2.2",
    "prettier": "^1.13.5",
    "prompt": "^1.0.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^15.5.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.1",
    "validate-commit-msg": "^2.12.2"
  },
  "lint-staged": {
    "{src,test}/**/*.ts*": [
      "prettier --print-width 80 --tab-width 4 --single-quote --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ]
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": [
      "./test/test-shim.ts",
      "./test/test-setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  }
}
