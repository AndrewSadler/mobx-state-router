{
  "name": "mobx-state-router",
  "description": "MobX powered router for React apps",
  "version": "0.0.0-development",
  "author": "Naresh Bhatia",
  "license": "MIT",
  "homepage": "https://github.com/nareshbhatia/mobx-state-router",
  "repository": {
    "type": "git",
    "url": "https://github.com/nareshbhatia/mobx-state-router.git"
  },
  "keywords": [
    "mobx",
    "react",
    "router"
  ],
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts*' 'test/**/*.ts*'",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "tsc -w",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "format": "prettier --write '{src,test}/**/*.ts*'",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "path-to-regexp": "^2.4.0",
    "query-string": "^5.1.1"
  },
  "peerDependencies": {
    "history": "^4.x",
    "mobx": "^4.x",
    "mobx-react": "^5.x",
    "react": "^16.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/enzyme": "^3.1.15",
    "@types/history": "^4.7.2",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.15",
    "@types/query-string": "^5.1.0",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "colors": "^1.3.3",
    "commitizen": "^3.0.5",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "history": "^4.7.2",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "mobx": "^4.8.0",
    "mobx-react": "^5.4.3",
    "prettier": "^1.15.3",
    "prompt": "^1.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^15.13.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts*": [
      "prettier --print-width 80 --tab-width 4 --single-quote --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ]
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": [
      "./test/test-shim.ts",
      "./test/test-setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  }
}
